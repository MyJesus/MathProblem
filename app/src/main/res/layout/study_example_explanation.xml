<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/example_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:visibility="visible"
    android:layout_marginLeft="62dp"
    android:layout_marginTop="174dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/example_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/open_draft_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="41dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/draft_paper_btn"
        android:gravity="center"
        android:text="草稿纸"
        android:textSize="24sp" />

    <Button
        android:id="@+id/go_to_exercise_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="3dp"
        android:layout_marginRight="95dp"
        android:background="@drawable/ic_exercise" />
</FrameLayout>