<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="356dp"
    android:layout_height="492dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_item_project"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/project_id"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="33sp"
        android:textStyle="bold"
        tools:text="01" />

    <!--分数-->
    <LinearLayout
        android:id="@+id/project_score_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="103dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_negative0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@drawable/ic_star_negative1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_negative2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_negative3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_negative4" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/project_video_status_wait"
        style="@style/project_video_status_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/download_status_wait"
        android:padding="3dp" />

    <ImageView
        android:id="@+id/project_video_download"
        style="@style/project_video_status_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/downloading_animation"
        android:padding="3dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="210dp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="#dbff5a00"
        android:textSize="27sp"
        tools:text="长方形和正方形面积的应用题" />

    <ImageButton
        android:id="@+id/play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="405dp"
        android:background="@drawable/btn_play_video_selector"
        android:padding="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="295dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/project_explain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="6dp"
            android:maxLines="3"
            android:textColor="#ab7726"
            android:textSize="17sp"
            tools:text="圆柱：把一个\n长方形绕它的一条边旋\n转一周形成的图形就是圆柱。" />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

</FrameLayout>