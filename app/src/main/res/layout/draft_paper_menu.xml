<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:layout_gravity="right"
    android:layout_marginRight="29dp"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hand"
        style="@style/palette_menu_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_draft_hand_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/undo"
        style="@style/palette_menu_style"
        android:src="@drawable/btn_draft_undo_selector" />

    <ImageView
        android:id="@+id/redo"
        style="@style/palette_menu_style"
        android:src="@drawable/btn_draft_redo_selector" />

    <ImageView
        android:id="@+id/clear"
        style="@style/palette_menu_style"
        android:src="@drawable/btn_draft_clear_selector" />

    <ImageView
        android:id="@+id/close"
        style="@style/palette_menu_style"
        android:src="@drawable/btn_draft_cancel_selector" />
</LinearLayout>