<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_small_player_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/small_player_video_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_small_video_selector"
        android:gravity="center"
        android:textColor="@color/small_video_index_selector"
        android:textSize="13sp"
        tools:text="1" />

    <TextView
        android:id="@+id/small_player_video_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:textColor="@color/small_video_name"
        android:textSize="18sp"
        tools:text="探秘“行程”之路__行程问题·钟表问题就得啦是假的" />

    <!--<include layout="@layout/video_small_window" />-->
</FrameLayout>